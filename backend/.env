# Local development environment (without Docker)
# Copy this file to .env for local development
# cp .env.local .env

NODE_ENV=development

# Database Configuration (for local PostgreSQL)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=product_management
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres123

# Redis Configuration (for local Redis)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=redis123

# Kafka Configuration (for local Kafka)
KAFKA_BROKERS=localhost:9092
KAFKA_CLIENT_ID=api-server

# AWS Configuration (LocalStack for local development)
AWS_ENDPOINT=http://localhost:4566
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=test
AWS_SECRET_ACCESS_KEY=test

# Rate Limiting
RATE_LIMIT_STANDARD=100
RATE_LIMIT_BULK=5

# Business Logic
LOW_STOCK_THRESHOLD=10

# Server Configuration
PORT=3001
